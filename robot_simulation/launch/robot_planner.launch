<?xml version="1.0" encoding="UTF-8"?>
<!-- Requires gazebo simulation running -->
<launch>

  <!-- Run the map server to load a pre-made map -->
  <arg name="map_file" default="$(find robot_simulation)/maps/map_unit2_74x74x20cm.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- MOVE_BASE -->
  <include file="$(find robot_simulation)/launch/move_base.launch" />

  <!-- Determine whether to run Rviz or not & set Rviz config file-->
  <arg name="use_rviz" default="true" />
  <arg name="rvizconfig" default="$(find robot_simulation)/rviz/Cpp_ND.rviz"/>
  <!-- Launching Rviz -->
  <node if="$(arg use_rviz)" name="rviz" pkg="rviz" type="rviz" respawn="false" args="-d $(arg rvizconfig)"/>

  <!-- Start service server that responds with a plan for global path planning -->
  <node pkg="robot_simulation" name="CppND_path_planner" type="path_planner_server" output="screen"/> 

</launch>
